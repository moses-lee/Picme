<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="com.wordpress.necessitateapps.picme.SingleTradeAction"
    android:background="@drawable/gradient">


    <ImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/image_back"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@drawable/ic_arrow"
        fancy:layout_constraintTop_toTopOf="parent"
        fancy:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:padding="10dp"/>

    <com.skyfishjy.library.RippleBackground
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ripple"
        app:rb_color="@color/colorPrimaryLight"
        app:rb_radius="20dp"
        app:rb_rippleAmount="4"
        app:rb_duration="5000"
        app:rb_scale="6"
        />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/button_trade_request"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:padding="15dp"
        fancy:fb_defaultColor="#38e170"
        fancy:fb_focusColor="#217c3f"
        fancy:fb_radius="65dp"
        fancy:fb_text="@string/request"
        fancy:fb_textColor="#FFFFFF"
        fancy:layout_constraintTop_toTopOf="parent"
        fancy:layout_constraintBottom_toBottomOf="parent"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintEnd_toEndOf="parent"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/button_trade_send"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:padding="15dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_defaultColor="#4ccbe7"
        fancy:fb_focusColor="#308294"
        fancy:fb_radius="65dp"
        fancy:fb_text="@string/send"
        fancy:fb_textColor="#FFFFFF"
        fancy:layout_constraintTop_toTopOf="parent"
        fancy:layout_constraintBottom_toBottomOf="parent"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/image_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_clear"
        fancy:layout_constraintTop_toBottomOf="@id/button_trade_send"
        fancy:layout_constraintStart_toStartOf="parent"
        fancy:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:padding="10dp"/>



</android.support.constraint.ConstraintLayout>
